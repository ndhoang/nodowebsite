<section class="container">
    <nav class="navbar">
        <div class="navbar-inner">
            <div class="container">
                <a href="/3-cay" class="brand">send us your ideas</a>
                
            </div>
        </div>
    </nav>
</section>

<section class='container'>
<div class='row'>
<form class="well span9">
    <div class='row' id='res' style='display: none'></div>
    <div class="row">
        
      <%= form_for @contact, :action => new_contact_path, :method => 'post', :remote => true do |f| %>
        <div class="span4">
            <label>first name</label>
            <%= f.text_field :first_name, :class => 'span3', :placeholder => 'your first name' %>
            
            <label>last name</label>
            <%= f.text_field :last_name, :class => 'span3', :placeholder => 'your last name' %>
            <label>email address</label>
            <div class="input-prepend">
                <%= f.email_field :email, :class => 'span3', :placeholder => 'your email address' %>
            </div>
            <label>subject</label>
            <select id="subject" name="contact[subject]" class="span3">
                <option value="na" selected="">choose one:</option>
                <option value="service">General Customer Service</option>
                <option value="suggestions">Suggestions</option>
                <option value="product">Product Support</option>
            </select>
            
        </div>
        <div class="span5">
            <label>message</label>
            <%= f.text_area :message,  :class=>"input-xlarge span5",  :rows=>"10" %>
        </div>
    </div>
    <%= f.submit 'send', :class => 'btn btn-primary pull-right' %>
    <% end %>
</form>
</div>
</section>

<footer class="container footer-box">   
    <hr class="shadow-line" />         
    <nav class="links">             
        <a href="#">contact us</a>
        <a href="#">tos and privacy</a>
        <a href="#">feedback</a>                   
    </nav>  
    <nav class="links">   
        <a href="#"><%= image_tag 'twitter-icon.png' %></a>
        <a href="#"><%= image_tag 'facebook-icon.png' %></a>   
        <a href="#"><%= image_tag 'googleplus-icon.png' %></a>      
    </nav>                 
    <p>we are <strong>excited</strong></p>           
</footer>
